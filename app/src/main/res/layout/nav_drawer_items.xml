<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:clickable="true">

        <ImageView
            android:id="@+id/icon_clouds_general"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_clouds_general"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/clouds_title" />

        <TextView
            android:id="@+id/title_clouds_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:text="@string/clouds_title"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/icon_clouds_general" />

        <TextView
            android:id="@+id/sub_title_clouds_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clouds_title_sub"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_toEndOf="@+id/icon_clouds_general"
            android:layout_below="@+id/title_clouds_general"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clickable="true">

        <ImageView
            android:id="@+id/icon_clouds_high"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_clouds_high"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/clouds_title" />

        <TextView
            android:id="@+id/title_clouds_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:text="@string/high_title"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/icon_clouds_high" />

        <TextView
            android:id="@+id/sub_title_clouds_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/height_sub_title"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_toEndOf="@+id/icon_clouds_high"
            android:layout_below="@+id/title_clouds_high"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clickable="true">

        <ImageView
            android:id="@+id/icon_clouds_mid"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_clouds_mid"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/clouds_title" />

        <TextView
            android:id="@+id/title_clouds_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:text="@string/mid_title"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/icon_clouds_mid" />

        <TextView
            android:id="@+id/sub_title_clouds_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mid_sub_title"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_toEndOf="@+id/icon_clouds_mid"
            android:layout_below="@+id/title_clouds_mid"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clickable="true">

        <ImageView
            android:id="@+id/icon_clouds_low"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_clouds_low"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/low_title" />

        <TextView
            android:id="@+id/title_clouds_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:text="@string/low_title"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_toEndOf="@+id/icon_clouds_low" />

        <TextView
            android:id="@+id/sub_title_clouds_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/low_sub_title"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_toEndOf="@+id/icon_clouds_low"
            android:layout_below="@+id/title_clouds_low"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <View
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/icon_gallery"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_gallery"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/low_title" />

            <TextView
                android:id="@+id/title_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:text="@string/gallery_title"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/icon_gallery" />

            <TextView
                android:id="@+id/sub_title_ic_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gallery_sub_title"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_toEndOf="@+id/icon_gallery"
                android:layout_below="@+id/title_gallery"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
        <View
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/icon_settings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/settings_title" />

            <TextView
                android:id="@+id/title_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:text="@string/settings_title"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/icon_settings" />

            <TextView
                android:id="@+id/sub_title_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_sub_title"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_toEndOf="@+id/icon_settings"
                android:layout_below="@+id/title_settings"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/icon_about"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_about"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:contentDescription="@string/low_title" />

            <TextView
                android:id="@+id/title_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:text="@string/about_title"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/icon_about" />

            <TextView
                android:id="@+id/sub_title_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_sub_title"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:layout_toEndOf="@+id/icon_about"
                android:layout_below="@+id/title_about"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View
            android:layout_height="0.5dp"
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>